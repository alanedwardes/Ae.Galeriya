@model EditCategoryModel

<h2>Edit Category @Model.Category.Name</h2>

<form action="" method="post">
    <div class="form-group">
        <select class="form-control" name="userIds" id="userIds" multiple="multiple">
            @foreach (var user in Model.Users)
            {
                @if (Model.Category.Users.Contains(user))
                {
                    <option value="@user.Id" selected="selected">@user.UserName</option>
                }
                else
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Category</button>
    </div>
</form>